<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
  <dict>
    <key>Label</key>
    <string>com.specforge.validate-urls</string>
    <key>ProgramArguments</key>
    <array>
      <string>/bin/zsh</string>
      <string>-lc</string>
      <string>cd __SPECFORGE_ROOT__ && ./scripts/automation/validate-urls.sh</string>
    </array>
    <!-- Run weekly on Sundays at 3:00 AM -->
    <key>StartCalendarInterval</key>
    <dict>
      <key>Weekday</key>
      <integer>0</integer>
      <key>Hour</key>
      <integer>3</integer>
      <key>Minute</key>
      <integer>0</integer>
    </dict>
    <key>StandardOutPath</key>
    <string>__SPECFORGE_ROOT__/validate-urls.log</string>
    <key>StandardErrorPath</key>
    <string>__SPECFORGE_ROOT__/validate-urls.log</string>
    <key>EnvironmentVariables</key>
    <dict/>
  </dict>
</plist>
