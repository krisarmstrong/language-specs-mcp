{
  "name": "specforge-mcp",
  "version": "1.5.0",
  "description": "SpecForge MCP server providing authoritative language specifications",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "specforge-mcp": "dist/index.js"
  },
  "files": [
    "dist",
    "scripts",
    "specs",
    "docs",
    "tools",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "SECURITY.md",
    "VERSIONING.md"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "test": "npm run build && node --test tests/**/*.test.js",
    "commitlint": "commitlint --edit",
    "prepare": "husky",
    "fetch:go": "python3 scripts/fetch.py go",
    "fetch:typescript": "python3 scripts/fetch.py typescript",
    "fetch:c": "python3 scripts/fetch.py c",
    "fetch:cpp": "python3 scripts/fetch.py cpp",
    "fetch:python": "python3 scripts/fetch.py python",
    "fetch:assembly": "python3 scripts/fetch.py assembly",
    "fetch:basic": "python3 scripts/fetch.py basic",
    "fetch:bash": "python3 scripts/fetch.py bash",
    "fetch:batch": "python3 scripts/fetch.py batch",
    "fetch:csharp": "python3 scripts/fetch.py csharp",
    "fetch:css": "python3 scripts/fetch.py css",
    "fetch:html": "python3 scripts/fetch.py html",
    "fetch:git": "python3 scripts/fetch.py git",
    "fetch:javascript": "python3 scripts/fetch.py javascript",
    "fetch:java": "python3 scripts/fetch.py java",
    "fetch:kotlin": "python3 scripts/fetch.py kotlin",
    "fetch:lua": "python3 scripts/fetch.py lua",
    "fetch:powershell": "python3 scripts/fetch.py powershell",
    "fetch:rust": "python3 scripts/fetch.py rust",
    "fetch:sql": "python3 scripts/fetch.py sql",
    "fetch:swift": "python3 scripts/fetch.py swift",
    "fetch:php": "python3 scripts/fetch.py php",
    "fetch:ruby": "python3 scripts/fetch.py ruby",
    "fetch:dart": "python3 scripts/fetch.py dart",
    "fetch:r": "python3 scripts/fetch.py r",
    "fetch:julia": "python3 scripts/fetch.py julia",
    "fetch:scala": "python3 scripts/fetch.py scala",
    "fetch:elixir": "python3 scripts/fetch.py elixir",
    "fetch:clojure": "python3 scripts/fetch.py clojure",
    "fetch:haskell": "python3 scripts/fetch.py haskell",
    "fetch:zig": "python3 scripts/fetch.py zig",
    "fetch:ocaml": "python3 scripts/fetch.py ocaml",
    "fetch:markdown": "python3 scripts/fetch.py markdown",
    "fetch:yaml": "python3 scripts/fetch.py yaml",
    "fetch:dockerfile": "python3 scripts/fetch.py dockerfile",
    "fetch:all": "python3 scripts/fetch-parallel.py",
    "fetch:all:parallel": "python3 scripts/fetch-parallel.py",
    "fetch:all:serial": "npm run fetch:assembly && npm run fetch:basic && npm run fetch:bash && npm run fetch:batch && npm run fetch:c && npm run fetch:cpp && npm run fetch:csharp && npm run fetch:css && npm run fetch:go && npm run fetch:html && npm run fetch:git && npm run fetch:javascript && npm run fetch:java && npm run fetch:kotlin && npm run fetch:lua && npm run fetch:powershell && npm run fetch:python && npm run fetch:rust && npm run fetch:sql && npm run fetch:swift && npm run fetch:typescript && npm run fetch:php && npm run fetch:ruby && npm run fetch:dart && npm run fetch:r && npm run fetch:julia && npm run fetch:scala && npm run fetch:elixir && npm run fetch:clojure && npm run fetch:haskell && npm run fetch:zig && npm run fetch:ocaml && npm run fetch:markdown && npm run fetch:yaml && npm run fetch:dockerfile",
    "fetch:stdlib": "FETCH_SCOPE=stdlib python3 scripts/fetch-parallel.py",
    "fetch:linters": "FETCH_SCOPE=linters python3 scripts/fetch-parallel.py",
    "fetch:formatters": "FETCH_SCOPE=formatters python3 scripts/fetch-parallel.py",
    "fetch:patterns": "FETCH_SCOPE=patterns python3 scripts/fetch-parallel.py",
    "fetch:delta": "python3 scripts/fetch-parallel.py --delta",
    "build:site": "tsc -p tsconfig.site.json && cp docs/site/build/health.js docs/site/health.js",
    "generate:health": "npm run build:site && python3 scripts/generate-health.py",
    "generate:index": "python3 scripts/generate-index.py",
    "generate:manifests": "python3 scripts/generate-manifests.py",
    "generate:search": "python3 scripts/generate-search-index.py",
    "generate:all": "npm run generate:health && npm run generate:index && npm run generate:manifests && npm run generate:search",
    "refresh": "python3 scripts/refresh.py",
    "install:scheduler": "bash scripts/automation/install.sh",
    "uninstall:scheduler": "bash scripts/automation/uninstall.sh",
    "dashboard": "python3 scripts/dashboard.py",
    "doctor": "python3 scripts/doctor.py",
    "diagnose:fetch": "python3 scripts/diagnose-fetch.py",
    "backfill:stubs": "python3 scripts/backfill-stubs.py",
    "validate:versions": "python3 scripts/validate-versions.py",
    "validate:versions:latest": "CHECK_LATEST=1 python3 scripts/validate-versions.py",
    "validate:stubs": "python3 scripts/validate-stubs.py",
    "update:versions": "python3 scripts/update-versions.py",
    "stamp:versions": "python3 scripts/stamp-versions.py",
    "validate:freshness": "python3 scripts/validate-freshness.py",
    "report:versions": "python3 scripts/report-versions.py",
    "report:versions:latest": "CHECK_LATEST=1 python3 scripts/report-versions.py",
    "verify": "python3 scripts/verify-specs.py"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/node": "^25.0.3",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "husky": "^9.0.11",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
